<main class="content">
    <h1 class="main-header"> My Profile </h1>

    <section class="user-profile">
        <div class="user-bio">
            <h3>My Bio</h3>
            <p>Bio goes here</p>
        </div>

        <div class="user-favorites">
            <h3>My Favorite Recipes</h3>
            <p>Favorites goes here</p>
        </div>

        <div class="user-recipes">
            <h3>My Recipes</h3>
            <p>User reipes goes here</p>
        </div>
    </section>

    <button id="add-recipe-button">Add Recipe</button>

    <section class="menu">
        <div id="modal-backdrop" class="hidden"></div>
            <div id="add-recipe-modal" class="hidden">
                <div class="modal">
                    <div class="modal-header">
                        <h3>Add A New Recipe</h3>
                        <button type="button" id="modal-close" class="modal-hide-button">&times;</button>
                    </div>
                    <div class="modal-body">
                        <div class="modal-element">
                            <label for="recipe-name-input">Recipe Name</label>
                            <input id="recipe-name-input" type="text">
                        </div>
                        <div class="modal-element">
                            <label for="recipe-photo-input">Photo URL</label>
                            <input id="recipe-photo-input" type="text">
                        </div>
                        <div class="modal-element">
                            <label for="recipe-about-input">Recipe URL</label>
                            <input id="recipe-about-input" type="text">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" id="modal-cancel" class="modal-hide-button action-button">Cancel</button>
                        <button type="button" id="modal-accept" class="action-button">Make My New Plant!</button>
                    </div>
                </div>
            </div>
    </section>

    <div id="modal-backdrop-name" class="hidden"></div>
    <div id="rename-recipe-modal" class="hidden">
        <div class="modal-recipe-name">
            <div class="modal-header">
                <h3>Rename Recipe</h3>
            </div>
            <div class="modal-body">
                <div class="modal-element">
                    <label for="recipe-newname-input">New Recipe Name</label>
                    <input id="recipe-newname-input" type="text">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="modal-name-cancel" class="modal-hide-button action-button">Cancel</button>
                <button type="button" id="modal-name-accept" class="action-button">Rename My Plant!</button>
            </div>
        </div>
    </div>
</main>