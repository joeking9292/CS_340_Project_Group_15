<h1>Update {{recipe.name}}:</h1>
<form id="update-person" action="/people" method="post">
    Recipe Name: <input type="text" name="name" value="{{recipe.name}}"><br>
    description: <input type="text" name="description" value="{{recipe.description}}"><br>
    Ingredients: <select name="Ingredients" id="ingredient-selector">
        {{#each Ingredients}}
        <option value="{{id}}">{{name}}</option>
        {{/each}}
    </select><br>
    Rating: <input type="number" name="age" value="{{person.age}}"><br>
</form>
<button onclick="updatePerson({{recipe.id}})">Update</button>
<script defer>selectPlanet({{recipe.Ingredients}});</script>
